#!/bin/bash

if [ "$1" = "email" ]; then
  trident-email
  exit
fi

if [ "$1" = "hex" ]; then
  trident-hex $2
  exit
fi

if [ "$1" = "config" ]; then
  trident-config
  exit
fi

if [ "$1" = "hidden" ]; then
  trident-hidden
  exit
fi

matched=($(grep -r "[0-9a-zA-Z]\{${1}\}" . -o -I))
cd `dirname $0`/..
for r in "${matched[@]}"
do
  result=`python ./randomness.py ${r##*:} $2`
  if [ "$result" != "" ]; then
    echo ${r%%:*} $result
  fi
done
